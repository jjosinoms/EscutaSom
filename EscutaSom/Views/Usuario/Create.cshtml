@model EscutaSom.Models.Usuario

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Usuario</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Username)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Username)
            @Html.ValidationMessageFor(model => model.Username)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Senha)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Senha,
    new { type = "password", id = "senha" })
            @Html.ValidationMessageFor(model => model.Senha)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ConfirmarSenha)
        </div>

        <div class="editor-field">
            @Html.TextBoxFor(model => model.ConfirmarSenha,
     new { type = "password", id = "confirmarSenha" })
            @Html.ValidationMessageFor(model => model.ConfirmarSenha)
        </div><br />
        <div id="notificacao_Erro" style="color:red;">

        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $(document).ready(function () {
        var senha = $("#senha").val();
        var confirmarSenha = $("#confirmarSenha").val();

        if (senha != confirmarSenha) {
            var dados = "Senhas Diferentes!";
            $("#notificacao_Erro").html(dados);
        }

    });

</script>



