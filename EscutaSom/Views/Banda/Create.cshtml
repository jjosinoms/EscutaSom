@model EscutaSom.Models.Banda

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Banda</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DataCriacao)
        </div>
        <div class="editor-label">
            @Html.TextBoxFor(model => model.DataCriacao,
    new { type = "date" })
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.QuantIntegrantes)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.QuantIntegrantes)
            @Html.ValidationMessageFor(model => model.QuantIntegrantes)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.gravadora)
        </div>
        <div class="editor-field">
           @Html.DropDownList("Id_Gravadora",
                 new SelectList(ViewBag.listaGravadora, "Id", "Nome"),
                    "Selecione a Gravadora ")

            @*@Html.EditorFor(model => model.gravadora.Nome)
            @Html.ValidationMessageFor(model => model.gravadora.Nome)*@
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
